@model ViewRecipeVM

<div class="bg-white">
	<div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
		<h2>@Model.RecipeName</h2>
		<img src=@Model.ImageUri class="aspect-square w-full rounded-lg bg-gray-200 object-cover group-hover:opacity-75 xl:aspect-[7/8]">

		@{
			foreach (var ingredient in Model.Ingredients)
			{
				<p>@ingredient.Name</p>
				<p>Quantity - @ingredient.Quantity</p>
				<br />
			}
		}
		<button type="button" onclick="location.href='@Url.Action("Recipe", "Recipe")'" class="btn btn-primary rounded-md bg-indigo-600">Back</button>
		<button type="button" onclick="location.href='@Url.Action("CreateEditRecipe", "Recipe",  new { id = Model.Id })'" class="btn btn-primary rounded-md bg-indigo-600">Modify</button>
		<button type="button" onclick="location.href='@Url.Action("DeleteRecipe", "Recipe", new { id = Model.Id })'" class="btn btn-primary rounded-md bg-indigo-600">Delete</button>
	</div>
</div>