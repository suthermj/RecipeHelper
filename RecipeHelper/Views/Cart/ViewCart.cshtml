@using RecipeHelper.Models.Kroger
@model IEnumerable<DetailedCartItem>

@{
    ViewData["Title"] = "Your Kroger Cart";

    var items = Model?.ToList() ?? new List<DetailedCartItem>();

    var regularTotal = items.Sum(i => i.RegularPrice * i.Quantity);
    var promoTotal = items.Sum(i => (i.PromoPrice > 0 ? i.PromoPrice : i.RegularPrice) * i.Quantity);
    var totalSavings = regularTotal - promoTotal;
    var totalItems = items.Sum(i => i.Quantity);

    var groupedByAisle = items
        .OrderBy(i => string.IsNullOrWhiteSpace(i.Aisle) ? "Other" : i.Aisle)
        .GroupBy(i => string.IsNullOrWhiteSpace(i.Aisle) ? "Other" : i.Aisle);
}

<div class="max-w-6xl mx-auto px-4 py-8 space-y-8">

    <!-- Header -->
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-wide text-blue-600">
                Kroger cart overview
            </p>
            <h1 class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
                Your Kroger cart
            </h1>
            <p class="mt-1 text-sm text-gray-600">
                Review the items we’ve added based on your selected recipes before you check out in the Kroger app.
            </p>
        </div>

        <div class="flex gap-2">
            <a asp-controller="Dinner"
               asp-action="ReviewDinnerSelections"
               class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium rounded-full border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 transition">
                Back to dinners
            </a>
            <a href="https://www.kroger.com/cart"
               target="_blank"
               class="inline-flex items-center justify-center px-4 py-2 text-sm font-semibold rounded-full bg-green-600 text-white hover:bg-green-700 transition">
                Open in Kroger
            </a>
        </div>
    </div>

    @if (!items.Any())
    {
        <div class="rounded-2xl border border-dashed border-gray-300 bg-gray-50 p-8 text-center">
            <h2 class="text-lg font-semibold text-gray-800 mb-2">Your cart is empty</h2>
            <p class="text-sm text-gray-600 mb-4">
                Once you add ingredients from your dinner selections, they’ll appear here for review.
            </p>
            <a asp-controller="Dinner"
               asp-action="ReviewDinnerSelections"
               class="inline-flex items-center justify-center px-4 py-2 text-sm font-semibold rounded-full bg-blue-600 text-white hover:bg-blue-700 transition">
                Choose dinners
            </a>
        </div>
    }
    else
    {
        <!-- Summary card -->
        <section class="grid gap-4 md:grid-cols-3">
            <div class="md:col-span-2 rounded-2xl border border-gray-200 bg-white p-4 sm:p-5 shadow-sm">
                <div class="flex items-center justify-between mb-3">
                    <h2 class="text-sm font-semibold text-gray-900">
                        Cart summary
                    </h2>
                    <span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-700">
                        @totalItems item@(totalItems == 1 ? "" : "s")
                    </span>
                </div>

                <dl class="space-y-2 text-sm">
                    <div class="flex justify-between">
                        <dt class="text-gray-600">Regular total</dt>
                        <dd class="font-medium text-gray-900">
                            @regularTotal.ToString("C")
                        </dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="text-gray-600">Current total</dt>
                        <dd class="font-semibold text-gray-900">
                            @promoTotal.ToString("C")
                        </dd>
                    </div>
                    @if (totalSavings > 0)
                    {
                        <div class="flex justify-between">
                            <dt class="text-gray-600">You’re saving</dt>
                            <dd class="font-semibold text-green-700">
                                -@totalSavings.ToString("C")
                            </dd>
                        </div>
                    }
                </dl>

                <p class="mt-3 text-xs text-gray-500">
                    Prices and availability are based on your selected Kroger store and may change before checkout.
                </p>
            </div>

            <div class="rounded-2xl border border-blue-100 bg-blue-50 p-4 sm:p-5">
                <h3 class="text-sm font-semibold text-blue-900 mb-2">
                    Next steps
                </h3>
                <ul class="space-y-2 text-xs text-blue-900">
                    <li class="flex gap-2">
                        <span class="mt-0.5 h-1.5 w-1.5 rounded-full bg-blue-500"></span>
                        Review quantities and stock levels below.
                    </li>
                    <li class="flex gap-2">
                        <span class="mt-0.5 h-1.5 w-1.5 rounded-full bg-blue-500"></span>
                        Open your cart in the Kroger app or website to schedule pickup or delivery.
                    </li>
                    <li class="flex gap-2">
                        <span class="mt-0.5 h-1.5 w-1.5 rounded-full bg-blue-500"></span>
                        Adjust or remove items directly in Kroger before final checkout.
                    </li>
                </ul>
            </div>
        </section>

        <!-- Items grouped by aisle -->
        <section class="space-y-6">
            @foreach (var aisleGroup in groupedByAisle)
            {
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <h2 class="text-sm font-semibold text-gray-900">
                            Aisle: @aisleGroup.Key
                        </h2>
                        <span class="text-xs text-gray-500">
                            @aisleGroup.Sum(i => i.Quantity) item@(aisleGroup.Sum(i => i.Quantity) == 1 ? "" : "s")
                        </span>
                    </div>

                    <div class="grid gap-3 sm:grid-cols-2">
                        @foreach (var item in aisleGroup)
                        {
                            var effectivePrice = (item.PromoPrice > 0 ? item.PromoPrice : item.RegularPrice);
                            var lineRegular = item.RegularPrice * item.Quantity;
                            var linePromo = effectivePrice * item.Quantity;
                            var lineSavings = lineRegular - linePromo;

                            <article class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm flex flex-col gap-3">
                                <div class="flex items-start justify-between gap-3">
                                    <div>
                                        <p class="text-xs uppercase tracking-wide text-gray-500">
                                            @item.Brand
                                        </p>
                                        <h3 class="text-sm font-semibold text-gray-900 leading-snug">
                                            @item.Name
                                        </h3>

                                        @if (item.Categories != null && item.Categories.Any())
                                        {
                                            <p class="mt-1 text-xs text-gray-500">
                                                @string.Join(" • ", item.Categories)
                                            </p>
                                        }
                                    </div>

                                    <div class="flex flex-col items-end gap-1">
                                        <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-700">
                                            Qty @item.Quantity
                                        </span>

                                        @if (!string.IsNullOrWhiteSpace(item.StockLevel))
                                        {
                                            <span class="inline-flex items-center rounded-full px-2 py-0.5 text-[0.65rem] font-medium
                                                                         @(item.StockLevel.Contains("Low", StringComparison.OrdinalIgnoreCase)
                                                                                                              ? "bg-yellow-50 text-yellow-800"
                                                                                                              : item.StockLevel.Contains("Out", StringComparison.OrdinalIgnoreCase)
                                                                                                                  ? "bg-red-50 text-red-700"
                                                                                                                  : "bg-emerald-50 text-emerald-700")">
                                @item.StockLevel
                            </span>
                                                        }

                                        @if (item.PromoPrice > 0)
                                        {
                                            <span class="inline-flex items-center rounded-full bg-rose-50 px-2 py-0.5 text-[0.65rem] font-semibold text-rose-700">
                                                On sale
                                            </span>
                                        }
                                    </div>
                                </div>

                                <div class="flex items-baseline justify-between text-sm">
                                    <div class="space-x-2">
                                        @if (item.PromoPrice > 0)
                                        {
                                            <span class="font-semibold text-gray-900">
                                                @effectivePrice.ToString("C") <span class="text-xs text-gray-500">ea</span>
                                            </span>
                                            <span class="text-xs text-gray-400 line-through">
                                                @item.RegularPrice.ToString("C")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="font-semibold text-gray-900">
                                                @item.RegularPrice.ToString("C") <span class="text-xs text-gray-500">ea</span>
                                            </span>
                                        }
                                    </div>

                                    <div class="text-right">
                                        <p class="text-xs text-gray-500">Line total</p>
                                        <p class="text-sm font-semibold text-gray-900">
                                            @linePromo.ToString("C")
                                        </p>
                                        @if (lineSavings > 0)
                                        {
                                            <p class="text-[0.7rem] text-emerald-700">
                                                You save @lineSavings.ToString("C")
                                            </p>
                                        }
                                    </div>
                                </div>
                            </article>
                        }
                    </div>
                </div>
            }
        </section>
    }
</div>