@{
    ViewData["Title"] = "Recipes";
}

@model List<ViewRecipeVM>

<div class="bg-white">
    <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
        <h2 class="sr-only">Products</h2>
        <button type="button" onclick="location.href='@Url.Action("CreateEditRecipe", "Recipe")'" class="btn btn-primary rounded-md bg-indigo-600">Add Recipe</button>
        <button type="button" onclick="location.href='@Url.Action("Product", "Recipe")'" class="btn btn-primary rounded-md bg-indigo-600">View Products</button>

        <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
            @{
                foreach (var recipe in Model)
                {
                    <a href="@Url.Action("ViewRecipe", "Recipe", new { id = recipe.Id })" class="group">
                        <img src=@recipe.ImageUri class="aspect-square w-full rounded-lg bg-gray-200 object-cover group-hover:opacity-75 xl:aspect-[7/8]">
                        <h3 class="mt-4 text-sm text-gray-700">@recipe.RecipeName</h3>
                        <!--<p class="mt-1 text-lg font-medium text-gray-900">$48</p>--->
                    </a>
                }
            }
        </div>
    </div>
</div>