@model ViewRecipeVM

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center justify-between gap-4">
            <div>
                <p class="text-sm uppercase tracking-wide text-gray-400 mb-1">
                    Recipe
                </p>
                <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">
                    @Model.RecipeName
                </h1>
            </div>

            <div class="hidden sm:flex items-center gap-3">
                <a asp-controller="Recipe" asp-action="Recipe"
                   class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-full border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 transition">
                    Back to Recipes
                </a>
                <a asp-controller="Recipe" asp-action="CreateEditRecipe" asp-route-id="@Model.Id"
                   class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-full bg-blue-600 text-white hover:bg-blue-700 shadow-sm transition">
                    Modify
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content Card -->
    <div class="bg-white shadow-lg rounded-2xl overflow-hidden border border-gray-100">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-0 lg:gap-8">
            <!-- Image Section -->
            <div class="bg-gray-50 flex items-center justify-center p-6">
                @if (!string.IsNullOrWhiteSpace(Model?.ImageUri))
                {
                    <img src="@Model.ImageUri"
                         alt="Image of @Model.RecipeName"
                         class="rounded-xl shadow-md max-h-96 w-full object-cover">
                }
                else
                {
                    <div class="w-full max-w-md h-60 border-2 border-dashed border-gray-300 rounded-xl flex items-center justify-center text-gray-400 text-sm">
                        No image available
                    </div>
                }
            </div>

            <!-- Ingredients & Details -->
            <div class="p-6 lg:p-8 flex flex-col h-full">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    Ingredients
                    <span class="inline-flex items-center rounded-full bg-emerald-50 px-3 py-1 text-xs font-medium text-emerald-700 border border-emerald-100">
                        @((Model.Ingredients?.Count ?? 0)) item@(Model.Ingredients?.Count == 1 ? "" : "s")
                    </span>
                </h2>

                @if (Model.Ingredients != null && Model.Ingredients.Any())
                {
                    <ul class="space-y-2 text-sm sm:text-base">
                        @foreach (var ingredient in Model.Ingredients)
                        {
                            <li class="flex items-start justify-between gap-4 rounded-lg bg-gray-50 px-3 py-2">
                                <span class="text-gray-800 font-medium">
                                    @ingredient.Name
                                </span>
                                <span class="text-gray-600 text-sm whitespace-nowrap">
                                    @ingredient.DisplayQuantity @ingredient.DisplayMeasurement
                                </span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-gray-500 text-sm">
                        No ingredients listed for this recipe yet.
                    </p>
                }

                <!-- Mobile / stacked actions -->
                <div class="mt-8 border-t border-gray-100 pt-4 flex flex-wrap gap-3 lg:hidden">
                    <a asp-controller="Recipe" asp-action="Recipe"
                       class="inline-flex items-center justify-center w-full sm:w-auto px-4 py-2 text-sm font-medium rounded-full border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 transition">
                        Back to Recipes
                    </a>
                    <a asp-controller="Recipe" asp-action="CreateEditRecipe" asp-route-id="@Model.Id"
                       class="inline-flex items-center justify-center w-full sm:w-auto px-4 py-2 text-sm font-medium rounded-full bg-blue-600 text-white hover:bg-blue-700 shadow-sm transition">
                        Modify
                    </a>
                </div>
            </div>
        </div>

        <!-- Footer Actions -->
        <footer class="px-6 lg:px-8 py-4 border-t border-gray-100 bg-gray-50 flex flex-col sm:flex-row items-center justify-between gap-3">
            <p class="text-xs text-gray-400">
                Manage this recipe
            </p>

            <div class="flex flex-wrap items-center gap-3">
                <form asp-controller="Recipe"
                      asp-action="DeleteRecipe"
                      asp-route-id="@Model.Id"
                      method="post"
                      class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="inline-flex items-center px-4 py-2 text-sm font-semibold rounded-full bg-red-500 text-white hover:bg-red-600 shadow-sm transition"
                            onclick="return confirm('Are you sure you want to delete this recipe?');">
                        Delete
                    </button>
                </form>
            </div>
        </footer>
    </div>
</div>