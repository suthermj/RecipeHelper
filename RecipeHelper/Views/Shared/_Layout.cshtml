<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>@ViewData["Title"] - RecipeHelper</title>

    <!-- App styles -->
    <link rel="stylesheet" href="/css/output.css" asp-append-version="true" />

    <!-- PWA support (optional - recommended for iPhone app-like behavior) -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#4F46E5" />
    <link rel="apple-touch-icon" href="/icons/icon-192.png" />
</head>

<body class="min-h-screen flex flex-col">

    <!-- Top App Bar (Tailwind version) -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
            <a asp-controller="Recipe" asp-action="Recipe" class="text-lg font-semibold text-gray-900">
                Cooking Helper
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 max-w-7xl mx-auto w-full px-4 py-3">

        @if (TempData["SuccessMessage"] is string success)
        {
            <div class="mb-4 rounded-lg border border-green-200 bg-green-50 p-3 text-sm text-green-800">
                <span class="font-semibold">Success:</span> @success
            </div>
        }

        @if (TempData["ErrorMessage"] is string error)
        {
            <div class="mb-4 rounded-lg border border-red-200 bg-red-50 p-3 text-sm text-red-800">
                <span class="font-semibold">Oops:</span> @error
            </div>
        }

        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
